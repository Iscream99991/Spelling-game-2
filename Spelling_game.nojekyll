<!DOCTYPE html>
<html>
<head>
  <title>Spelling Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin-top: 50px;
    }
    .letter-btn {
      padding: 10px 20px;
      font-size: 20px;
      margin: 5px;
      cursor: pointer;
    }
    .feedback {
      font-size: 24px;
      margin-top: 20px;
    }
    #next-btn {
      display: none;
      margin-top: 20px;
      font-size: 18px;
      padding: 10px 20px;
    }
  </style>
</head>
<body>

  <h1>Spelling Game for My Sister üíñ</h1>
  <p id="clue">Clue: </p>

  <div id="letters"></div>
  <div class="feedback" id="feedback"></div>
  <button id="next-btn">Next Word ‚û°Ô∏è</button>

  <script>
    const wordList = [
      { word: "apple", clue: "A red or green fruit üçé" },
      { word: "banana", clue: "A long yellow fruit üçå" },
      { word: "cat", clue: "A small animal that says meow üê±" },
      { word: "book", clue: "You read it üìñ" },
      { word: "sun", clue: "It shines in the sky ‚òÄÔ∏è" }
    ];

    let currentIndex = 0;
    let userAnswer = "";

    const clueElement = document.getElementById("clue");
    const lettersDiv = document.getElementById("letters");
    const feedbackDiv = document.getElementById("feedback");
    const nextBtn = document.getElementById("next-btn");

    function shuffle(word) {
      return word.split("").sort(() => Math.random() - 0.5);
    }

    function loadWord() {
      userAnswer = "";
      lettersDiv.innerHTML = "";
      feedbackDiv.innerText = "";
      nextBtn.style.display = "none";

      const currentWord = wordList[currentIndex];
      clueElement.innerText = "Clue: " + currentWord.clue;

      const shuffledLetters = shuffle(currentWord.word);

      shuffledLetters.forEach(letter => {
        const button = document.createElement("button");
        button.innerText = letter;
        button.classList.add("letter-btn");
        button.onclick = () => {
          userAnswer += letter;
          button.disabled = true;

          if (userAnswer.length === currentWord.word.length) {
            if (userAnswer === currentWord.word) {
              feedbackDiv.innerText = "‚úÖ Correct! Great job!";
            } else {
              feedbackDiv.innerText = `‚ùå Oops! The word was "${currentWord.word}".`;
            }
            nextBtn.style.display = "inline-block";
          }
        };
        lettersDiv.appendChild(button);
      });
    }

    nextBtn.onclick = () => {
      currentIndex++;
      if (currentIndex < wordList.length) {
        loadWord();
      } else {
        clueElement.innerText = "üéâ You finished all the words!";
        lettersDiv.innerHTML = "";
        feedbackDiv.innerText = "Great work!";
        nextBtn.style.display = "none";
      }
    };

    // Load the first word
    loadWord();
  </script>

</body>
</html>
